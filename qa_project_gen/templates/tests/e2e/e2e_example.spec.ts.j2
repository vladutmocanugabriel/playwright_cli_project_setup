import { test, expect } from '@playwright/test';
import { WebamboosHome } from '../support/POMs/feature_one/example.page';

test.describe('Webamboos E2E smoke', () => {
  test('homepage -> contact', async ({ page }) => {
    const home = new WebamboosHome(page);

    await test.step('Open homepage ', async () => {
      await home.goto();
    });

    await test.step('Navigate to Contact via top CTA', async () => {
      await home.openContact();
      await expect(page).toHaveURL(/webamboos\.com\/(contact|contact-us|#contact)/i);
      await expect(
        page.getByRole('heading', { name: /contact|get in touch|tell us/i })
      ).toBeVisible();
    });
  });
});